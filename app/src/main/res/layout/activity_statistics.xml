<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Statistics">
	<android.support.constraint.ConstraintLayout
		android:id="@+id/product_statistics"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_margin="@dimen/usual_margin"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/check_image_background_color">
		<TextView
			android:id="@+id/name"
			android:padding="@dimen/usual_margin"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAlignment="center"
			android:text="@string/product_statistics"
			android:textAllCaps="true"
			android:textColor="@color/textColor"
			 android:background="@color/colorPrimary"/>
		<TextView
			android:id="@+id/this_week_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/this_week"
			app:layout_constraintLeft_toLeftOf="parent"
			android:padding="@dimen/usual_margin"
			android:textSize="20sp"
			android:textColor="@color/ListTextColor"
			app:layout_constraintTop_toBottomOf="@id/name"/>
		<TextView
			android:id="@+id/this_week"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/hour_min"
			app:layout_constraintRight_toRightOf="parent"
			android:padding="@dimen/usual_margin"
			android:textSize="15sp"
			android:textColor="@color/ListTextColor"
			app:layout_constraintTop_toBottomOf="@id/name"
			app:layout_constraintBottom_toBottomOf="@id/this_week_text"/>
		<!--TODO: make custom shape (not me)-->
		<View
			android:id="@+id/topbar"
			app:layout_constraintTop_toTopOf="@id/topbar_stats"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="@id/topbar_stats"
			android:layout_width="200dp"
			android:layout_height="10dp"
			android:background="@color/colorAccent"
			android:layout_margin="@dimen/usual_margin"/>
		<TextView
			android:id="@+id/topbar_stats"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/this_week"
			app:layout_constraintLeft_toRightOf="@id/topbar"
			app:layout_constraintBottom_toBottomOf="parent"
			android:padding="@dimen/usual_margin"
			android:text="@string/hour_min"/>
	</android.support.constraint.ConstraintLayout>
	<Space
		android:id="@+id/spacer"
		android:layout_width="match_parent"
		app:layout_constraintTop_toBottomOf="@id/product_statistics"
		android:layout_height="25dp"/>
	<android.support.constraint.ConstraintLayout
		android:id="@+id/user_statistics"
		app:layout_constraintTop_toBottomOf="@id/spacer"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_margin="@dimen/usual_margin"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/check_image_background_color">
		<TextView
			android:id="@id/name"
			android:padding="@dimen/usual_margin"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAlignment="center"
			android:text="@string/user_statistics"
			android:textAllCaps="true"
			android:textColor="@color/textColor"
			android:background="@color/colorPrimary"/>
	</android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>